          <!--<%= link_to 'Destroy', label, method: :delete, data: {confirm: 'Are you sure?'} %>-->
          <!--</tr>-->


          <!--- 一个label ---->
          <div class="label_tag labelBig label_transform" style="z-index: <%= label.z_index %>; top: <%= label.top %>; left: <%= label.left %>; transform: <%= label.rotate %>;">
            <!--- 状态栏 --->
            <div class="label_button_list">
              <!--- 关闭按钮 --->
              <button class="glyphicon glyphicon-remove close_button"></button>
              <button class="save_button">save</button>
              <button class="glyphicon glyphicon-refresh rotate_button"></button>
            </div>
            <div class="label_main">
              <%= label.content %>
