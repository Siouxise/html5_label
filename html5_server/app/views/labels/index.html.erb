<h1>Listing labels</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Content</th>
      <th>Bg image</th>
      <th>Bg color</th>
      <th>Text color</th>
      <th>Opacity</th>
      <th>Rotate</th>
      <th>Z index</th>
      <th>Left</th>
      <th>Top</th>
      <th>Is del</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @labels.each do |label| %>
      <tr>
        <td><%= label.user_id %></td>
        <td><%= label.content %></td>
        <td><%= label.bg_image %></td>
        <td><%= label.bg_color %></td>
        <td><%= label.text_color %></td>
        <td><%= label.opacity %></td>
        <td><%= label.rotate %></td>
        <td><%= label.z_index %></td>
        <td><%= label.left %></td>
        <td><%= label.top %></td>
        <td><%= label.is_del %></td>
        <td><%= link_to 'Show', label %></td>
        <td><%= link_to 'Edit', edit_label_path(label) %></td>
        <td><%= link_to 'Destroy', label, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Label', new_label_path %>
